@model List<GetCategoryVm>
<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3 ">
        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
        
    </div>
    <a asp-controller="Category" asp-action="Create" > <button class="btn btn-warning"> Create </button> </a>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Settings</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (GetCategoryVm category in Model)
                    {

                        <tr>
                            <td>@category.Name</td>
                            <td>@category.Description</td>
                            <td>
                                <a asp-controller="Category" asp-action="Details" asp-route-id="@category.Id"> <button class="btn btn-info"> Detail </button> </a>
                                <form method="post" asp-action="Update" asp-route-id="@category.Id">
                                    <button type="submit" class="btn btn-info">Update</button>
                                </form>
                                <form method="post" asp-action="Delete" asp-route-id="@category.Id">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

</div>
<!-- /.container-fluid -->
            </div>
<!-- End of Main Content -->